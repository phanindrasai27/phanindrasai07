<style>
  .container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .hero-image-container {
    width: 100%;
    display: flex;
    justify-content: flex-start; /* Left align */
    margin-bottom: 0.5rem;
  }

  .hero-image {
    width: 100%;
    max-width: 400px; /* Reduced to 400px */
    height: auto;
    object-fit: contain;
    border-radius: 4px;
    align-self: flex-start;
  }

  .links {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start; /* Left align */
    gap: 0.5rem;
    font-size: 0.95rem;
    color: #a3a3a3;
  }

  .links a {
    color: #a3a3a3;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .links a:hover {
    opacity: 0.8;
    text-decoration: underline;
    color: #e5e5e5;
  }

  .separator {
    color: #525252; /* Darker gray separator */
    opacity: 1;
  }
</style>