<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .articles {
    display: grid;
    gap: 2rem;
  }

  .article-card {
    padding: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
    background: transparent;
  }

  .article-card:hover {
    border-color: rgba(255, 255, 255, 0.9);
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.05);
  }

  article h2 {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.5rem;
    margin: 0 0 1rem 0;
    letter-spacing: -0.02em;
    line-height: 1.3;
    transition: all 0.3s ease;
  }

  .article-card:hover h2 {
    color: rgba(255, 255, 255, 0.9);
  }

  .read-link {
    font-weight: 700;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    transition: all 0.3s ease;
  }

  .read-link:hover {
    color: rgba(255, 255, 255, 0.9);
  }

  @media (max-width: 600px) {
    .article-card {
      padding: 1.5rem;
    }
  }
</style>