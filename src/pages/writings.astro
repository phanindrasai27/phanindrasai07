---
import Layout from '../layouts/Layout.astro';

// Add the writings constant back
const writings = [
  { title: "Building Products That Make People Addicted to Your Magic and Journey with Your Product", url: "https://medium.com/@phanindra_sai27/building-products-that-make-people-addicted-to-your-magic-and-journey-with-your-product-afc115610bfb" },
  { title: "Designing YouTube for Senior Citizens: A Case Study", url: "https://medium.com/@phanindra_sai27/designing-youtube-for-senior-citizens-a-case-study-40550823d1ac" },
  { title: "How Eatsure is Surviving in the Cutthroat Food Delivery Market with its Own Playbook", url: "https://medium.com/@phanindra_sai27/how-eatsure-is-surviving-in-the-cutthroat-food-delivery-market-with-its-own-playbook-f7507e431901" },
  { title: "Living Forever: The Bryan Johnson Experiment", url: "https://medium.com/@phanindra_sai27/living-forever-the-bryan-johnson-experiment-7c68c87d64a7" },
  { title: "Not All Startups Are Created Equal: The Brutal Truth About What it Takes to Make an Impact", url: "https://medium.com/@phanindra_sai27/not-all-startups-are-created-equal-the-brutal-truth-about-what-it-takes-to-make-an-impact-cc316125a39c" },
  { title: "Notifications are Dead for Future Product Design: Notify App - A Case Study", url: "https://medium.com/@phanindra_sai27/notifications-are-dead-for-future-product-design-notify-app-a-case-study-fa66ab6f9c6d" },
  { title: "Product Improvement Case Study on Rapido", url: "https://medium.com/@phanindra_sai27/product-improvement-case-study-on-rapido-b92aa827c4c6" },
  { title: "The Choice Paradox in the Middle Class: A Trap of Endless Exploration", url: "https://medium.com/@phanindra_sai27/the-choice-paradox-in-the-middle-class-a-trap-of-endless-exploration-54f6dd46be75" },
  { title: "The Impact of System Design, Tech Stack and Tools on Workplace Productivity", url: "https://medium.com/@phanindra_sai27/the-impact-of-system-design-tech-stack-and-tools-on-workplace-productivity-98711db2524d" },
  { title: "When Life Feels Overwhelming: Letting Go of the Mental Weight", url: "https://medium.com/@phanindra_sai27/when-life-feels-overwhelming-letting-go-of-the-mental-weight-11f15e01204f" }
];
---

<Layout>
  <div class="container">
    <h1>Writings</h1>
    
    <div class="links">
      {writings.map((writing, index) => (
        <a href={writing.url}>{writing.title}</a>
      ))}
    </div>
  </div>
</Layout>

<style>
  .container {
    /* Removed margin: 0 auto; */
    /* Ensure no other conflicting container styles */
  }

  h1 {
    font-size: clamp(2.5rem, 8vw, 4rem); /* Match other h1s */
    margin: 0 0 3rem 0; /* Match pow.astro h1 margin */
    line-height: 1.1;
    letter-spacing: -0.04em;
    max-width: 15ch;
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: clamp(1rem, 2vh, 1.5rem);
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    margin-top: clamp(1rem, 3vh, 2rem);
  }

  .links a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: all 0.3s ease;
    transform-origin: 0 50%;
    position: relative;
    padding-left: 1.2em;
  }

  .links a::before {
    content: "â€¢";
    position: absolute;
    left: 0;
    top: 0;
    color: rgba(255, 255, 255, 0.9);
  }

  .links a:hover {
    color: rgba(255, 255, 255, 0.9);
  }
  
  .links a:hover::before {
    color: rgba(255, 255, 255, 0.9);
  }

  .links a:active {
    transform: scale(0.95);
    transition: transform 0.1s ease;
  }
</style>