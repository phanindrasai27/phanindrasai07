// Helper function to parse 'Mon YYYY' string to a Date object
const parseDisplayDate = (displayDate) => {
  const [monthStr, yearStr] = displayDate.split(' ');
  const month = new Date(Date.parse(monthStr + " 1, " + yearStr)).getMonth();
  return new Date(parseInt(yearStr), month, 1); // Day is set to 1, doesn't affect month/year sorting
};

const writings = writingsData
  .map(writing => ({
    ...writing,
    publishDate: parseDisplayDate(writing.displayDate)
  }))
  .sort((a, b) => b.publishDate.getTime() - a.publishDate.getTime());

---

<Layout>
  <div class="container">
    <h1>Writings</h1>
    
    <ul class="links">
      {writings.map((writing) => (
        <li>
          <a href={writing.url} target="_blank" rel="noopener noreferrer">
            <span class="writing-date">{writing.displayDate}</span>
            <span class="writing-title">{writing.title}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>
</Layout>

<style>
  .container {
    /* Removed margin: 0 auto; */
    /* Ensure no other conflicting container styles */
  }

  h1 {
    font-size: clamp(2.5rem, 8vw, 4rem); /* Match other h1s */
    margin: 0 0 3rem 0; /* Match pow.astro h1 margin */
    line-height: 1.1;
    letter-spacing: -0.04em;
    max-width: 15ch;
  }

  .links {
    display: flex;
    flex-direction: column;
    gap: clamp(0.75rem, 1.5vh, 1rem); /* Reduced gap */
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    margin-top: clamp(1rem, 3vh, 2rem);
  }

  .links li {
    margin-bottom: 0.5em;
    list-style-type: none; /* Ensure no default list bullet if not already set */
  }

  .links a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: all 0.3s ease;
    transform-origin: 0 50%;
    display: flex; /* Use flexbox for date and title alignment */
    align-items: baseline; /* Align baseline of date and title */
  }

  .links a::before {
    content: ""; /* Remove bullet by making content empty */
  }

  .links a:hover {
    color: rgba(255, 255, 255, 0.9);
  }
  
  .links a:hover::before {
    color: rgba(255, 255, 255, 0.9);
  }

  .links a:active {
    transform: scale(0.95);
    transition: transform 0.1s ease;
  }

  .writing-date {
    width: 7ch; /* Adjusted for 'Mon YYYY', e.g., 'Jan 2024' */
    margin-right: 1.5em; /* Space between date and title */
    color: rgba(255, 255, 255, 0.7); /* Slightly dimmer color for the date */
    text-align: left; /* Align text to the left within its allocated space */
    flex-shrink: 0; /* Prevent the date from shrinking if the title is long */
    font-size: 0.9em; /* Make date font slightly smaller than title */
  }

  .writing-title {
    flex-grow: 1; /* Allow title to take up remaining space */
  }
</style>