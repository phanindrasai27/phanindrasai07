---
import Layout from '../layouts/Layout.astro';
import WritingListItem from '../components/WritingListItem.astro';
import { getCollection } from 'astro:content';

const allWritings = await getCollection('writings');
const sortedWritings = allWritings.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Helper to format date for display
const formatDate = (date) => {
  return date.toLocaleDateString('en-us', { month: 'short', year: 'numeric' });
};
---

<Layout>
  <div class="container">
    <h1>Writings</h1>
    
    <div class="writings-list">
      {sortedWritings.map((writing) => (
        <WritingListItem 
          title={writing.data.title}
          url={`/writings/${writing.slug}`}
          displayDate={formatDate(writing.data.pubDate)}
        />
      ))}
    </div>
  </div>
</Layout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: var(--text-primary);
  }

  .writings-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
</style>